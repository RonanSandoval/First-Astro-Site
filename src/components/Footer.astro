---
import { Icon } from 'astro-icon/components'
---

<div class="footer">
    <div class="footer-info">
        100 street street <br>
        Edmonton Alberta
    </div>
    <div class="socials">
        <a href="" target="_blank">
            <Icon name="mdi:instagram"/>
        </a>
        <a href="" target="_blank">
            <Icon name="mdi:facebook"/>
        </a>
        <a href="" target="_blank">
            <Icon name="mdi:linkedin"/>
        </a>
        
    </div>
    <p class="copyright"> Copyright 2024 - Company Name. All rights reserved </p>
</div>

<style>
    .footer {
        background-color: black;
        width: 100%;
        color: white;
        padding-bottom: 1rem;
        padding-top: 1rem;
    }

    .footer-info {
        width: fit-content;
        margin-left: auto; 
        margin-right: 0;
        padding: 1rem;
        text-align: right;
    }

    .socials {
        width: fit-content;
        margin-left: auto; 
        margin-right: 0;
        padding: 1rem;
        display: flex;
    }

    [data-icon] {
        font-size: 2rem;
        transition: all 100ms ease-in-out;
        margin-left: 1rem;
        color: white;
    }

    [data-icon]:hover {
        color: darkgreen;
    }

    .copyright {
        padding: 1rem;
    }
</style>