---
import Hamburger from "./Hamburger.astro"
---

<div class="navigation">
  <div class="navbar">
    <div class="logo">
      <a href="/"> Company Logo </a>
    </div>
    <nav class="navlinks">
      <a href="/">Home</a>
      <a href="/about/">About</a>
    </nav>
    <Hamburger class="toggle-button" />

  </div>
</div>
<div class="mobilelinks">
  <a href="/">Home</a>
  <a href="/about/">About</a>
</div>

<style>
  .navigation {
    overflow: hidden;
    position: sticky;
    top: 0;
    z-index: 9;
    display: flex;
    flex-direction: column;
  }

  .navbar {
    background-color: rgb(0, 0, 0);
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  .navlinks a {
    color: white;
    text-decoration: none;
    font-size: 17px;
    margin-right: 1rem;
    text-align: center;
    padding: 10px;
    transition: all 100ms ease-in-out;
    border-radius: 5px;
  }

  .logo{
    padding: 1rem;
    
  }

  .logo a {
    color: white;
    text-decoration: none;
    font-size: 17px;
  }

  .navlinks {
    padding: 1.5rem;
  }

  .navbar .navlinks a:not(.active):hover {
    background-color: rgb(27, 27, 27);
  }

  .navbar .navlinks a.active {
    background-color: darkgreen;
  }

  .toggle-button {
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 21px;
    display: none;
    margin-right: 1rem;
  }

  .toggle-button:hover {
    cursor: pointer;
  }

  .bar {
    height: 3px;
    width: 100%;
    background-color: white;
    border-radius: 10px;
  }

  .mobilelinks {
    display: none;
    flex-direction: column;
    height: 100%;
    width: 100%;
    background-color: rgb(27, 27, 27);
    position: fixed;
    z-index: 9;
  }

  .mobilelinks a {
    color: white;
    text-decoration: none;
    font-size: 17px;
    text-align: center;
    padding: 10px;
    transition: all 100ms ease-in-out;
  }

  .mobilelinks a:not(.active):hover {
    background-color: rgb(63, 63, 63);
  }

  .mobilelinks a.active {
    background-color: darkgreen;
  }

  @media (max-width: 1000px) {
    .navbar {
      justify-content: space-between;
    }

    .navlinks {
      display: none;
    }

    .mobilelinks.active {
    display: flex;
  }
  }


</style>

<!--Set active class on nav when the page is active -->
<script>
  document.addEventListener('astro:page-load', () => {
    const nav = document.querySelector(".navbar");
    const navLinks = nav.querySelectorAll("a");
    const currentURL = window.location.href;
    navLinks.forEach((link) => {
      if (link.href === currentURL) {
        link.classList.add("active");
      }
    });

    const mobile = document.querySelector(".mobilelinks");
    const mobileLinks = mobile.querySelectorAll("a");
    mobileLinks.forEach((link) => {
      if (link.href === currentURL) {
        link.classList.add("active");
      }
    });

    const toggleButton = document.getElementById("nav-icon3");
    const navbarLinks = document.getElementsByClassName("mobilelinks")[0];
    toggleButton.addEventListener('click', () => {
      navbarLinks.classList.toggle('active');
      toggleButton.classList.toggle('open');
      console.log(toggleButton.classList);
    })
  }, { once: false });
</script>